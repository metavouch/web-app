html {
  background-color: #191726;
}

body,
#root {
  background: radial-gradient(circle at center, #403d55 0, #191726 80vh);
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
}

a {
  &:any-link {
    color: white;
  }
}

nav {
  width: 100%;
  margin-top: 10px;
  display: grid;
  align-items: center;
  grid-template-columns: 160px 1fr 160px;
  justify-content: space-between;

  #logo {
    text-decoration: none;
    text-transform: uppercase;
    padding-left: 20px;

    h1 {
      font-size: 20px;
      font-family: Verdana, sans-serif;
      font-weight: bold;
      animation: cycle 0.8s ease infinite;

      @keyframes cycle {
        0% {
          text-shadow: 0 0 2px black, 1px 1px 1px red, 2px 2px 1px orange,
            3px 3px 1px yellow;
        }
        16% {
          text-shadow: 0 0 2px black, 1px 1px 1px orange, 2px 2px 1px yellow,
            3px 3px 1px green;
        }
        33% {
          text-shadow: 0 0 2px black, 1px 1px 1px yellow, 2px 2px 1px green,
            3px 3px 1px cyan;
        }
        50% {
          text-shadow: 0 0 2px black, 1px 1px 1px green, 2px 2px 1px cyan,
            3px 3px 1px blue;
        }
        66% {
          text-shadow: 0 0 2px black, 1px 1px 1px cyan, 2px 2px 1px blue,
            3px 3px 1px magenta;
        }
        83% {
          text-shadow: 0 0 2px black, 1px 1px 1px blue, 2px 2px 1px magenta,
            3px 3px 1px red;
        }
        100% {
          text-shadow: 0 0 2px black, 1px 1px 1px magenta, 2px 2px 1px red,
            3px 3px 1px orange;
        }
      }
    }
  }

  .navigation {
    justify-self: center;
  }

  ul {
    padding: 0;

    li {
      font-family: monospace;
      text-transform: uppercase;
      display: inline;
      list-style: none;
      margin: 10px;

      a {
        padding: 10px;

        &:hover {
          text-decoration: none;
          background-color: #342f52;
          transition: 0.5s;
        }
      }
    }
  }

  button {
    text-decoration: none;
    background-color: #342f52;
    color: white;
    border: none;
    padding: 10px;
    transition: 0.5s;
    font-family: monospace;
    text-transform: uppercase;
    list-style: none;

    &:hover {
      text-decoration: underline;
      cursor: pointer;
    }
  }
}
